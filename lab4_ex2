#include <iostream>
#include <string>
class StudentBuilder
{
private:
	struct Node
	{
		int id;
		std::string fullName;
		double score;
		Node* next;
		Node( ) : next(NULL) { }
		Node(int id, std::string fullName, double score) : id(id), fullName(fullName), score(score), next(NULL) { }
	};
	Node* head;

	void splitList(Node* mid, Node* right)
	{
		Node* premid = mid;
		while (right->next != NULL)
		{
			right = right->next;
			if (right->next != NULL)
			{
				premid = premid->next;
				right = right->next;
			}
		}
		mid = premid->next;
		premid->next = NULL;
	}

public:

	StudentBuilder() { }
	~StudentBuilder()
	{

	}
	void addFirst(int id, std::string fullName, double score)
	{
		Node* newNode = new Node(id, fullName, score);
		if (head == NULL) head = newNode;
		else newNode->next = head;
		head = newNode;
	}

	void printList()
	{
		Node* currNode = head;
		std::cout << "head->";
		while (currNode != NULL)
		{
			std::cout << currNode->id << " | " << currNode->fullName << " | " << currNode->score << "->" << std::endl;
			currNode = currNode->next;
		}
		std::cout << "NULL";
	}

	void sortList()
	{
		Node* pcurr_1 = head, *curr_1 = head, * curr_2 = head, * minNode = head, *pminNode = head;
		while (curr_1 != NULL)
		{
			while (curr_2 != NULL)
			{
				if (curr_2->score < minNode->score)
                    minNode = curr_2;
                if(pminNode != head)
                    pminNode = pminNode->next;
			}
            Node * temp = new Node(minNode->id,minNode->fullName, minNode->score);
            
            if(curr_1 == head)
            {
                pmin->next = curr_1;
                head = curr_1->next;
            }
            
            pminNode->next = curr_1;

            if(pcurr_1 != head)
                pcurr_1 = pcurr_1->next;
            curr_1 = curr_1->next;

		}
	}
};

int main()
{
    StudentBuilder list;
    list.addFirst(1, "Balebom", 6.5);
    list.addFirst(2, "Andrew", 8);
    list.addFirst(3, "Michel", 7);
    list.addFirst(4, "Tim", 8.5);
    list.addFirst(5, "Agie", 7.5);
    list.printList();
	return 0;
}
